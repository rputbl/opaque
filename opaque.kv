#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter


<AnchorLayout>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            # this implicitly binds the size of the
            # rect to the size of the widget
            size: self.size
            # self here still refers to the widget as Rectangle is only a
            # graphics instruction and not a widget
            pos: self.pos
#        BorderImage:
#            # BorderImage behaves like the CSS BorderImage
#            border: 10, 10, 10, 10
#            source: 'button_white.png'
#            pos: self.pos
#            size: self.size

<ListItemButton>
	selected_color: [1,.7,.7,.9]
	deselected_color: [0,0,0,0]
	height: 40

<DetailButton>
	selected_color: [0,0,0,0]
	deselected_color: [0,0,0,0]
	height: 40


<RootWidget>
    something: '#'
    obutton: ''
    sect: "Home"
    app: ''
    home: ["Timeline","Messages","Profile","Usage"]
    accounts: [str(index) for index in range(3)]
    keys: [str(index) for index in range(5)]
    conversations: ["Item #{0}".format(i) for i in range(15)]
    contacts: [str(index) for index in range(7)]
    notebooks: [str(index) for index in range(7)]
    timelist: ["Timeline Item #{0}".format(i) for i in range(100)]
    mesglist: ["Message Item #{0}".format(i) for i in range(100)]
    convlist: ["Conversation Item #{0}".format(i) for i in range(100)]
    peoplist: ["People Item #{0}".format(i) for i in range(100)]
    notelist: ["Note #{0}".format(i) for i in range(100)]
    leftgrid_id: leftgrid
    rightpane_id: rightpane
    rootbox_id: rootbox

    BoxLayout:
        id: rootbox
        size_hint: 1, 1
        size: root.size
        orientation: 'vertical'
        padding: 10
        spacing: 10
        GridLayout:
            cols: 2
            size_hint: 1, 1
            GridLayout:
                id: leftgrid
                cols: 1
                size_hint: None,1
                width: 120
            GridLayout:
                cols: 1
                size_hint: 1,1
                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'top'
                    id: rightpane
                GridLayout:
                    cols: 2
                    spacing: 2
                    size_hint: 1, None
                    height: 30
                    TextInput:
                        size_hint: .8,None
                        height: 30
                        text: 'Message'
                    DetailButton:
                        size_hint: None,1
                        width: 75
                        id: conncount
                        text: "conn:1"
